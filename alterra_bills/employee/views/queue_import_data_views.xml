<?xml version="1.0" encoding="utf-8"?>
<odoo>
<data>
    <record id="queue_import_data_view_tree" model="ir.ui.view">
        <field name="name">queue.import.data.view.tree</field>
        <field name="model">queue.import.data</field>
        <field name="arch" type="xml">
            <tree string="Queue on Import Data"  create="0" edit="0">
                <field name="name" />
                <field name="model" />
                <field name="state" widget="badge" 
                    decoration-muted="state == 'queued'" 
                    decoration-primary="state == 'done'" 
                    decoration-warning="state == 'failed'" 
                />
            </tree>
        </field>
    </record>

    <record id="queue_import_data_view_form" model="ir.ui.view">
        <field name="name">queue.import.data.view.form</field>
        <field name="model">queue.import.data</field>
        <field name="arch" type="xml">
            <form string="Queue on Import Data" create="0" edit="0">
                <header>
                    <field name="state" widget="statusbar" statusbar_visible="queued,done"/>
                </header>
                <sheet>
                    <group>
                        <group>
                            <field name="name" />
                            <field name="model" />
                            <field name="import_file" />
                        </group>
                        <group>
                        </group>
                    </group>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers" />
                    <field name="activity_ids" widget="mail_activity" />
                    <field name="message_ids" widget="mail_thread" />
                </div>
            </form>
        </field>
    </record>

    <record id="queue_import_data_action" model="ir.actions.act_window">
        <field name="name">Queue on Import Data</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">queue.import.data</field>
        <field name="view_mode">tree,form</field> 
    </record>
</data>
</odoo>
